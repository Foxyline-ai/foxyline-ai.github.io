        <a href="/realisations#drbersou" class="group block p-6 rounded-lg transition-all hover:shadow-xl hover:-translate-y-2" style="background-color: var(--color-warm-white);">
          <div class="space-y-4">
            <div class="aspect-video rounded-lg overflow-hidden relative" style="background-color: var(--color-natural-beige);">
              <div class="absolute inset-0 bg-gradient-to-br opacity-0 group-hover:opacity-10 transition-opacity" style="background: linear-gradient(135deg, var(--color-copper) 0%, var(--color-forest) 100%);"></div>
              <Image src={drBersouAfter} alt="Dr Bersou" class="w-full h-full object-cover transition-transform group-hover:scale-105" />
            </div>
            <h3 style="font-family: Outfit, sans-serif; font-size: 20px; color: var(--color-forest); font-weight: 500;">
