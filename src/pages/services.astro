---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Section from '../components/Section.astro';
import ServiceCard from '../components/ServiceCard.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<BaseLayout
  title="Premium Web Services - Showcase Sites, Landing Pages & Redesigns | Foxyline.ai"
  description="Professional showcase sites, optimized landing pages, modern redesigns. Custom design, SEO optimized, maintenance-free. Discover our premium web services."
  ogType="website"
>
  <Navigation currentPage="services" />

  <!-- Header -->
  <div class="pt-24 md:pt-28">
    <Section maxWidth="4xl">
      <div class="text-center space-y-6 py-12 md:py-16">
        <p
          class="text-xs uppercase tracking-widest"
          style="color: var(--color-copper); font-family: Outfit, sans-serif; font-weight: 500;"
        >
          OUR SERVICES
        </p>
        <h1
          style="font-family: Outfit, sans-serif; font-size: clamp(36px, 6vw, 64px); line-height: 1.1; color: var(--color-forest); font-weight: 500; letter-spacing: -0.02em;"
        >
          What we do
        </h1>
        <p
          class="max-w-2xl mx-auto"
          style="font-family: Outfit, sans-serif; font-size: 20px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;"
        >
          Premium web solutions for demanding professionals. No generic templates, only custom-made.
        </p>
      </div>
    </Section>
  </div>

  <!-- Services principaux -->
  <Section maxWidth="6xl">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Site vitrine premium -->
      <div class="p-8 rounded-lg transition-all hover:shadow-lg" style="background-color: var(--color-warm-white); border: 2px solid var(--color-natural-beige);">
        <div class="space-y-4">
          <div class="w-12 h-12 rounded-lg flex items-center justify-center" style="background-color: var(--color-natural-beige);">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <rect x="3" y="3" width="18" height="18" rx="2" stroke="var(--color-forest)" stroke-width="2"/>
              <path d="M3 9h18M9 9v12" stroke="var(--color-copper)" stroke-width="2"/>
            </svg>
          </div>
          <h3 style="font-family: Outfit, sans-serif; font-size: 24px; color: var(--color-forest); font-weight: 500;">
            Premium showcase site
          </h3>
          <p style="font-family: Outfit, sans-serif; font-size: 16px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Professional 4-7 page website that inspires confidence, attracts customers and sets you apart from the competition.
          </p>
          <ul class="space-y-2 pt-2">
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Strong and professional image</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Clear site that reassures your visitors</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Optimized to be found on Google</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Ultra-fast speed</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Flawless mobile version</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Effective contact form</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Landing pages -->
      <div class="p-8 rounded-lg transition-all hover:shadow-lg" style="background-color: var(--color-warm-white); border: 2px solid var(--color-natural-beige);">
        <div class="space-y-4">
          <div class="w-12 h-12 rounded-lg flex items-center justify-center" style="background-color: var(--color-natural-beige);">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z" stroke="var(--color-forest)" stroke-width="2" stroke-linejoin="round"/>
              <path d="M9 12l2 2 4-4" stroke="var(--color-copper)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3 style="font-family: Outfit, sans-serif; font-size: 24px; color: var(--color-forest); font-weight: 500;">
            Landing pages
          </h3>
          <p style="font-family: Outfit, sans-serif; font-size: 16px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Pages designed to convert your visitors into customers. Perfect for promoting a specific service or event.
          </p>
          <ul class="space-y-2 pt-2">
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Clear structure, impactful messages</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Design that guides to action</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Connection to marketing tools (Google, Meta...)</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Ultra-fast loading</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Refontes -->
      <div class="p-8 rounded-lg transition-all hover:shadow-lg" style="background-color: var(--color-warm-white); border: 2px solid var(--color-natural-beige);">
        <div class="space-y-4">
          <div class="w-12 h-12 rounded-lg flex items-center justify-center" style="background-color: var(--color-natural-beige);">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M21 12a9 9 0 11-6.219-8.56" stroke="var(--color-forest)" stroke-width="2" stroke-linecap="round"/>
              <path d="M18 2v6h-6" stroke="var(--color-copper)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M18 8l-3-3" stroke="var(--color-copper)" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>
          <h3 style="font-family: Outfit, sans-serif; font-size: 24px; color: var(--color-forest); font-weight: 500;">
            Redesigns
          </h3>
          <p style="font-family: Outfit, sans-serif; font-size: 16px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Give your aging site a fresh look. Modernize your image, clarify your message and improve professional impression.
          </p>
          <ul class="space-y-2 pt-2">
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Modern and professional design</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Clearer and more effective structure</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Better visibility on Google</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">More potential customers converted</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Branding léger -->
      <div class="p-8 rounded-lg transition-all hover:shadow-lg" style="background-color: var(--color-warm-white); border: 2px solid var(--color-natural-beige);">
        <div class="space-y-4">
          <div class="w-12 h-12 rounded-lg flex items-center justify-center" style="background-color: var(--color-natural-beige);">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <circle cx="12" cy="12" r="10" stroke="var(--color-forest)" stroke-width="2"/>
              <path d="M8 12h8M12 8v8" stroke="var(--color-copper)" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>
          <h3 style="font-family: Outfit, sans-serif; font-size: 24px; color: var(--color-forest); font-weight: 500;">
            Light branding
          </h3>
          <p style="font-family: Outfit, sans-serif; font-size: 16px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Consistent visual identity for your business. Logo, color palette, typography and simple but professional style guide.
          </p>
          <ul class="space-y-2 pt-2">
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Logo creation</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Color palette</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Typography selection</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Web style guide</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Maintenance & support -->
      <div class="p-8 rounded-lg transition-all hover:shadow-lg" style="background-color: var(--color-warm-white); border: 2px solid var(--color-natural-beige);">
        <div class="space-y-4">
          <div class="w-12 h-12 rounded-lg flex items-center justify-center" style="background-color: var(--color-natural-beige);">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z" stroke="var(--color-forest)" stroke-width="2"/>
              <path d="M12 6v6l4 2" stroke="var(--color-copper)" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>
          <h3 style="font-family: Outfit, sans-serif; font-size: 24px; color: var(--color-forest); font-weight: 500;">
            Maintenance & Support
          </h3>
          <p style="font-family: Outfit, sans-serif; font-size: 16px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Your site stays flawless all year. No technical stress, no risk of bugs or downtime.
          </p>
          <ul class="space-y-2 pt-2">
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Quick minor updates (text, images, hours)</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Performance monitoring</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Visual corrections</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">Simple human support</span>
            </li>
            <li class="flex items-start gap-2">
              <span style="color: var(--color-copper);">•</span>
              <span style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage);">No risk of bugs or downtime</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </Section>

  <!-- Ce que vous obtenez toujours -->
  <Section maxWidth="6xl" background="var(--color-natural-beige)">
    <div class="space-y-12">
      <div class="text-center space-y-4">
        <p
          class="text-xs uppercase tracking-widest"
          style="color: var(--color-copper); font-family: Outfit, sans-serif; font-weight: 500;"
        >
          ALWAYS INCLUDED
        </p>
        <h2
          style="font-family: Outfit, sans-serif; font-size: clamp(32px, 5vw, 48px); line-height: 1.2; color: var(--color-forest); font-weight: 500;"
        >
          What you always get
        </h2>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="p-6 rounded-lg" style="background-color: var(--color-warm-white);">
          <h3 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500; margin-bottom: 8px;">
            Premium design
          </h3>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            A modern and professional interface.
          </p>
        </div>

        <div class="p-6 rounded-lg" style="background-color: var(--color-warm-white);">
          <h3 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500; margin-bottom: 8px;">
            Fast and optimized site
          </h3>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Ultra-fast loading, technical SEO included.
          </p>
        </div>

        <div class="p-6 rounded-lg" style="background-color: var(--color-warm-white);">
          <h3 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500; margin-bottom: 8px;">
            Always perfect on mobile
          </h3>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            A flawless experience on all screens.
          </p>
        </div>

        <div class="p-6 rounded-lg" style="background-color: var(--color-warm-white);">
          <h3 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500; margin-bottom: 8px;">
            Secure Cloudflare hosting
          </h3>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Maximum speed + global infrastructure.
          </p>
        </div>

        <div class="p-6 rounded-lg" style="background-color: var(--color-warm-white);">
          <h3 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500; margin-bottom: 8px;">
            Simple support
          </h3>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Small modifications included, quick handling.
          </p>
        </div>

        <div class="p-6 rounded-lg" style="background-color: var(--color-warm-white);">
          <h3 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500; margin-bottom: 8px;">
            Fast delivery
          </h3>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Your site in 5–10 days depending on the project.
          </p>
        </div>
      </div>
    </div>
  </Section>

  <!-- CTA -->
  <CTA
    title="Ready to create your premium site?"
    description="Let's discuss your project and see how Foxyline can transform your digital presence."
    buttonText="Create my site"
    buttonLink="/contact"
    secondaryButtonText="See pricing"
    secondaryButtonLink="/tarifs"
  />

  <!-- Footer -->
  <Footer variant="minimal" />
</BaseLayout>

<style>
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 100px;
  }

  *:focus-visible {
    outline: 2px solid var(--color-copper);
    outline-offset: 2px;
  }
</style>
