---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../i18n/config';
import FoxDecorations from '../../components/FoxDecorations.astro';

const lang = 'en';
---

<Layout title="Your site. Smart. Fast. Foxy." lang={lang}>
  <main>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center py-20 px-4 md:px-8 modern-gradient overflow-hidden">
      <!-- <div class="mesh-overlay"></div> -->
      <!-- <FoxDecorations variant="dark" /> -->
      
      <!-- Animated Background Elements -->
      <!-- <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-gradient-radial from-fox-500/10 to-transparent rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-gradient-radial from-neon-500/10 to-transparent rounded-full blur-3xl animate-float" style="animation-delay: -2s;"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-conic from-accent-500/5 via-matrix-900/0 to-accent-500/5 rounded-full animate-spin" style="animation-duration: 60s;"></div>
      </div> -->

      <div class="max-w-6xl mx-auto relative">
        <!-- Main Content -->
         <FoxDecorations variant="dark" />
        <div class="text-center mb-16">
          <div class="relative inline-block mb-6" data-aos="fade-up">
            <div class="absolute inset-0 bg-gradient-to-r from-fox-500/20 to-neon-500/20 blur-xl"></div>
            <span class="relative inline-block px-6 py-2 text-modern-100 bg-matrix-800/50 rounded-full border border-modern-100/10 text-sm font-medium tracking-wider uppercase">
              Crafting Digital Excellence
            </span>
          </div>

          <h1 
            class="text-4xl md:text-6xl lg:text-7xl xl:text-8xl font-bold mb-8 leading-tight"
            data-aos="fade-up"
            data-aos-delay="100"
          >
            {t('hero.title', lang)}
            <span class="gradient-text block mt-2">{t('hero.subtitle', lang)}</span>
          </h1>

          <p 
            class="text-xl md:text-2xl max-w-2xl mx-auto mb-12 text-modern-200/90 leading-relaxed"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            {t('hero.description', lang)}
          </p>

          <div 
            class="flex flex-col sm:flex-row gap-6 justify-center items-center"
            data-aos="fade-up"
            data-aos-delay="300"
          >
            <a 
              href={`/${lang}/contact`}
              class="group relative px-8 py-4 bg-gradient-to-r from-fox-500 to-neon-500 text-modern-50 font-space text-lg rounded-xl hover:shadow-2xl hover:shadow-fox-500/20 transition-all duration-500 overflow-hidden"
            >
              <span class="relative z-10">{t('hero.cta.quote', lang)}</span>
              <div class="absolute inset-0 bg-gradient-to-r from-neon-500 to-fox-500 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </a>

            <a 
              href={`/${lang}/portfolio`}
              class="group px-8 py-4 bg-matrix-800/50 backdrop-blur-sm border border-modern-100/10 text-modern-100 font-space text-lg rounded-xl hover:bg-matrix-800/70 hover:border-modern-100/20 transition-all duration-500 hover:shadow-xl"
            >
              <span class="relative z-10 group-hover:text-modern-50 transition-colors duration-500">{t('hero.cta.portfolio', lang)}</span>
            </a>
          </div>
          <!-- <FoxDecorations variant="dark" /> -->
        </div>

        <!-- Stats/Features Grid -->
        <div 
          class="grid md:grid-cols-3 gap-6 mt-20"
          data-aos="fade-up"
          data-aos-delay="400"
        >
          <div class="glass-card p-6 rounded-xl backdrop-blur-lg border-modern-100/10 hover:border-modern-100/20 transition-all duration-500">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-lg bg-fox-500/10 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-fox-500">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-modern-50">Lightning Fast</h3>
                <p class="text-modern-200/70">Optimized Performance</p>
              </div>
            </div>
          </div>

          <div class="glass-card p-6 rounded-xl backdrop-blur-lg border-modern-100/10 hover:border-modern-100/20 transition-all duration-500">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-lg bg-neon-500/10 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-neon-500">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.395m3.42 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-modern-50">Unique Design</h3>
                <p class="text-modern-200/70">Tailored to Your Brand</p>
              </div>
            </div>
          </div>

          <div class="glass-card p-6 rounded-xl backdrop-blur-lg border-modern-100/10 hover:border-modern-100/20 transition-all duration-500">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-lg bg-accent-500/10 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-accent-500">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-modern-50">SEO Optimized</h3>
                <p class="text-modern-200/70">Maximum Visibility</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Pain Points Section -->
    <section class="relative py-32 px-4 md:px-8 bg-matrix-900 overflow-hidden">
      <div class="mesh-overlay opacity-10"></div>
      <!-- <FoxDecorations variant="light" /> -->
      
      <!-- Animated Background Elements -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-gradient-radial from-fox-500/5 to-transparent rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-gradient-radial from-neon-500/5 to-transparent rounded-full blur-3xl animate-float" style="animation-delay: -3s;"></div>
      </div>

      <div class="max-w-6xl mx-auto relative">
        <div class="text-center mb-16">
          <h2 
            class="text-3xl md:text-5xl font-bold mb-4"
            data-aos="fade-up"
          >
            {t('pain.title', lang)}
            <span class="gradient-text block mt-2">{t('pain.subtitle', lang)}</span>
          </h2>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8 mb-16">
          <div 
            class="glass-card p-8 rounded-xl hover:scale-105 transform transition-all duration-500 hover:shadow-xl hover:shadow-fox-500/10"
            data-aos="fade-up"
            data-aos-delay="100"
          >
            <div class="w-14 h-14 bg-fox-500 rounded-xl flex items-center justify-center mb-6 neon-glow">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-modern-50">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3 text-modern-50">{t('pain.generic.title', lang)}</h3>
            <p class="text-modern-200/80 leading-relaxed">{t('pain.generic.description', lang)}</p>
          </div>
          
          <div 
            class="glass-card p-8 rounded-xl hover:scale-105 transform transition-all duration-500 hover:shadow-xl hover:shadow-neon-500/10"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            <div class="w-14 h-14 bg-neon-500 rounded-xl flex items-center justify-center mb-6 neon-glow">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-matrix-900">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3 text-modern-50">{t('pain.performance.title', lang)}</h3>
            <p class="text-modern-200/80 leading-relaxed">{t('pain.performance.description', lang)}</p>
          </div>
          
          <div 
            class="glass-card p-8 rounded-xl hover:scale-105 transform transition-all duration-500 hover:shadow-xl hover:shadow-accent-500/10"
            data-aos="fade-up"
            data-aos-delay="300"
          >
            <div class="w-14 h-14 bg-accent-500 rounded-xl flex items-center justify-center mb-6 neon-glow">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-modern-50">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.182 16.318A4.486 4.486 0 0012.016 15a4.486 4.486 0 00-3.198 1.318M21 12a9 9 0 11-18 0 9 9 0 0118 0zM9.75 9.75c0 .414-.168.75-.375.75S9 10.164 9 9.75 9.168 9 9.375 9s.375.336.375.75zm-.375 0h.008v.015h-.008V9.75zm5.625 0c0 .414-.168.75-.375.75s-.375-.336-.375-.75.168-.75.375-.75.375.336.375.75zm-.375 0h.008v.015h-.008V9.75z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3 text-modern-50">{t('pain.experience.title', lang)}</h3>
            <p class="text-modern-200/80 leading-relaxed">{t('pain.experience.description', lang)}</p>
          </div>
        </div>

        <div class="text-center">
          <a 
            href={`/${lang}/contact`}
            class="group inline-flex items-center gap-2 px-8 py-4 bg-fox-500 text-modern-50 font-space text-lg rounded-xl hover:bg-fox-600 transition-all duration-500 shadow-lg shadow-fox-500/20 hover:shadow-fox-500/40 relative overflow-hidden neon-glow"
            data-aos="fade-up"
          >
            <span class="relative z-10">{t('pain.cta', lang)}</span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 relative z-10 transition-transform duration-500 group-hover:translate-x-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
            <div class="absolute inset-0 bg-gradient-to-r from-fox-500 to-neon-500 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </a>
        </div>
      </div>
    </section>

    <!-- Solution Section -->
    <section class="relative py-32 px-4 md:px-8 bg-matrix-950 overflow-hidden">
      <div class="mesh-overlay opacity-10"></div>
      <!-- <FoxDecorations variant="light" /> -->
      
      <!-- Animated Background Elements -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/3 left-1/3 w-[600px] h-[600px] bg-gradient-conic from-fox-500/5 via-neon-500/5 to-accent-500/5 rounded-full animate-spin" style="animation-duration: 30s;"></div>
      </div>

      <div class="max-w-6xl mx-auto relative">
        <div class="text-center mb-16">
          <h2 
            class="text-3xl md:text-5xl font-bold mb-4"
            data-aos="fade-up"
          >
            {t('solution.title', lang)}
            <span class="gradient-text block mt-2">{t('solution.subtitle', lang)}</span>
          </h2>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          <div 
            class="glass-card p-8 rounded-xl hover:scale-105 transform transition-all duration-500 hover:shadow-xl hover:shadow-fox-500/10 group"
            data-aos="fade-up"
            data-aos-delay="100"
          >
            <div class="w-14 h-14 bg-fox-500 rounded-xl flex items-center justify-center mb-6 neon-glow transform transition-transform duration-500 group-hover:rotate-12">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-modern-50">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3 text-modern-50">{t('solution.design.title', lang)}</h3>
            <p class="text-modern-200/80 leading-relaxed">{t('solution.design.description', lang)}</p>
          </div>
          
          <div 
            class="glass-card p-8 rounded-xl hover:scale-105 transform transition-all duration-500 hover:shadow-xl hover:shadow-neon-500/10 group"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            <div class="w-14 h-14 bg-neon-500 rounded-xl flex items-center justify-center mb-6 neon-glow transform transition-transform duration-500 group-hover:rotate-12">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-matrix-900">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3 text-modern-50">{t('solution.performance.title', lang)}</h3>
            <p class="text-modern-200/80 leading-relaxed">{t('solution.performance.description', lang)}</p>
          </div>
          
          <div 
            class="glass-card p-8 rounded-xl hover:scale-105 transform transition-all duration-500 hover:shadow-xl hover:shadow-accent-500/10 group"
            data-aos="fade-up"
            data-aos-delay="300"
          >
            <div class="w-14 h-14 bg-accent-500 rounded-xl flex items-center justify-center mb-6 neon-glow transform transition-transform duration-500 group-hover:rotate-12">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-modern-50">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3 text-modern-50">{t('solution.visibility.title', lang)}</h3>
            <p class="text-modern-200/80 leading-relaxed">{t('solution.visibility.description', lang)}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="relative py-32 px-4 md:px-8 bg-matrix-900 overflow-hidden">
      <div class="mesh-overlay opacity-10"></div>
      <!-- <FoxDecorations variant="light" /> -->
      
      <!-- Animated Background Elements -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-gradient-radial from-accent-500/5 to-transparent rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-gradient-radial from-fox-500/5 to-transparent rounded-full blur-3xl animate-float" style="animation-delay: -2s;"></div>
      </div>

      <div class="max-w-6xl mx-auto relative">
        <h2 
          class="text-3xl md:text-5xl font-bold mb-16 text-center"
          data-aos="fade-up"
        >
          {t('process.title', lang)}
          <span class="gradient-text block mt-2">{t('process.subtitle', lang)}</span>
        </h2>

        <div class="grid md:grid-cols-2 gap-16">
          <div 
            class="space-y-12"
            data-aos="fade-right"
          >
            <div class="flex gap-6">
              <div class="relative">
                <div class="w-14 h-14 rounded-full bg-fox-500 text-modern-50 flex items-center justify-center font-space text-xl shadow-lg shadow-fox-500/20 neon-glow relative z-10">1</div>
                <div class="absolute top-14 left-1/2 -translate-x-1/2 w-px h-24 bg-gradient-to-b from-fox-500/50 to-transparent"></div>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-3 text-modern-50">{t('process.analysis.title', lang)}</h3>
                <p class="text-modern-200/80 leading-relaxed">{t('process.analysis.description', lang)}</p>
              </div>
            </div>

            <div class="flex gap-6">
              <div class="relative">
                <div class="w-14 h-14 rounded-full bg-neon-500 text-matrix-900 flex items-center justify-center font-space text-xl shadow-lg shadow-neon-500/20 neon-glow relative z-10">2</div>
                <div class="absolute top-14 left-1/2 -translate-x-1/2 w-px h-24 bg-gradient-to-b from-neon-500/50 to-transparent"></div>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-3 text-modern-50">{t('process.design.title', lang)}</h3>
                <p class="text-modern-200/80 leading-relaxed">{t('process.design.description', lang)}</p>
              </div>
            </div>

            <div class="flex gap-6">
              <div>
                <div class="w-14 h-14 rounded-full bg-accent-500 text-modern-50 flex items-center justify-center font-space text-xl shadow-lg shadow-accent-500/20 neon-glow">3</div>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-3 text-modern-50">{t('process.development.title', lang)}</h3>
                <p class="text-modern-200/80 leading-relaxed">{t('process.development.description', lang)}</p>
              </div>
            </div>
          </div>

          <div 
            class="glass-card p-10 rounded-2xl shadow-lg relative group"
            data-aos="fade-left"
          >
            <div class="absolute inset-0 bg-gradient-to-br from-fox-500/5 via-neon-500/5 to-accent-500/5 rounded-2xl transition-opacity duration-500 opacity-0 group-hover:opacity-100"></div>
            <div class="relative">
              <h3 class="text-2xl font-bold mb-8 text-modern-50">{t('why.title', lang)}</h3>
              <ul class="space-y-6">
                <li class="flex items-start gap-4">
                  <div class="w-8 h-8 rounded-lg bg-fox-500/10 flex items-center justify-center flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-fox-500">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <span class="text-modern-200/90 leading-relaxed">{t('why.speed', lang)}</span>
                </li>
                <li class="flex items-start gap-4">
                  <div class="w-8 h-8 rounded-lg bg-neon-500/10 flex items-center justify-center flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-neon-500">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <span class="text-modern-200/90 leading-relaxed">{t('why.design', lang)}</span>
                </li>
                <li class="flex items-start gap-4">
                  <div class="w-8 h-8 rounded-lg bg-accent-500/10 flex items-center justify-center flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-accent-500">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                
                  <span class="text-modern-200/90 leading-relaxed">{t('why.seo', lang)}</span>
                </li>
                <li class="flex items-start gap-4">
                  <div class="w-8 h-8 rounded-lg bg-fox-500/10 flex items-center justify-center flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-fox-500">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <span class="text-modern-200/90 leading-relaxed">{t('why.support', lang)}</span>
                </li>
              </ul>

