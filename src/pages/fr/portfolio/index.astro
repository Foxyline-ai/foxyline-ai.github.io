---
import Layout from '../../../layouts/Layout.astro';
import { t, defaultLanguage } from '../../../i18n/config';
import FoxDecorations from '../../../components/FoxDecorations.astro';

const lang = defaultLanguage;

const projects = [
  {
    title: 'Eco Solutions',
    category: 'Site vitrine',
    image: 'https://images.unsplash.com/photo-1497366216548-37526070297c?w=800',
    description: 'Refonte complète avec focus sur l\'impact environnemental',
    stats: {
      speed: '98/100',
      seo: '96/100',
      satisfaction: '100%'
    }
  },
  {
    title: 'Tech Innovate',
    category: 'Landing Page',
    image: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800',
    description: 'Landing page convertissante pour un produit SaaS',
    stats: {
      speed: '97/100',
      seo: '98/100',
      satisfaction: '100%'
    }
  },
  {
    title: 'Urban Style',
    category: 'E-commerce',
    image: 'https://images.unsplash.com/photo-1441986300917-64674bd600d8?w=800',
    description: 'Boutique en ligne moderne pour une marque de mode',
    stats: {
      speed: '95/100',
      seo: '97/100',
      satisfaction: '98%'
    }
  },
  {
    title: 'Food Express',
    category: 'Application Web',
    image: 'https://images.unsplash.com/photo-1555396273-367ea4eb4db5?w=800',
    description: 'Application de livraison de repas optimisée pour la conversion',
    stats: {
      speed: '96/100',
      seo: '95/100',
      satisfaction: '99%'
    }
  }
];
---

<Layout title="Portfolio | Foxyline" lang={lang}>
  <main class="pt-32">
    <!-- Hero Section -->
    <section class="relative py-20 px-4 md:px-8 overflow-hidden">
      <FoxDecorations />
      <div class="max-w-6xl mx-auto text-center relative">
        <div 
          class="absolute -top-12 left-1/2 transform -translate-x-1/2 w-24 h-24 text-fox opacity-10"
        >
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2L9 7H3L6 12L3 17H9L12 22L15 17H21L18 12L21 7H15L12 2Z" />
          </svg>
        </div>
        <h1 
          class="text-4xl md:text-6xl lg:text-7xl font-bold text-charcoal mb-6"
          data-aos="fade-up"
        >
          {t('portfolio.title', lang)}<br/>
          <span class="text-fox">{t('portfolio.subtitle', lang)}</span>
        </h1>
        <p 
          class="text-xl md:text-2xl max-w-2xl mx-auto mb-12 text-charcoal/80"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          {t('portfolio.description', lang)}
        </p>
      </div>
    </section>

    <!-- Portfolio Grid -->
    <section class="relative py-20 px-4 md:px-8 bg-ivory overflow-hidden">
      <FoxDecorations variant="dark" />
      <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-8">
        {projects.map((project, index) => (
          <div 
            class="group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 bg-white"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <img 
              src={project.image} 
              alt={project.title}
              class="w-full h-[400px] object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-charcoal/90 to-charcoal/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-8">
                <div class="flex items-center gap-2 mb-2">
                  <svg class="w-4 h-4 text-fox" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2L9 7H3L6 12L3 17H9L12 22L15 17H21L18 12L21 7H15L12 2Z" />
                  </svg>
                  <p class="text-fox font-poppins">{project.category}</p>
                </div>
                <h3 class="text-2xl font-bold text-white mb-2">{project.title}</h3>
                <p class="text-silk/90 mb-4">{project.description}</p>
                <div class="grid grid-cols-3 gap-4">
                  <div>
                    <p class="text-silk/80 text-sm">Performance</p>
                    <p class="text-white font-poppins">{project.stats.speed}</p>
                  </div>
                  <div>
                    <p class="text-silk/80 text-sm">SEO</p>
                    <p class="text-white font-poppins">{project.stats.seo}</p>
                  </div>
                  <div>
                    <p class="text-silk/80 text-sm">Satisfaction</p>
                    <p class="text-white font-poppins">{project.stats.satisfaction}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="relative py-20 px-4 md:px-8 bg-charcoal text-white overflow-hidden">
      <FoxDecorations variant="light" />
      <div class="max-w-4xl mx-auto text-center relative">
        <div 
          class="absolute -top-12 left-1/2 transform -translate-x-1/2 w-24 h-24 text-fox opacity-10"
        >
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2L9 7H3L6 12L3 17H9L12 22L15 17H21L18 12L21 7H15L12 2Z" />
          </svg>
        </div>
        <h2 
          class="text-3xl md:text-5xl font-bold mb-6"
          data-aos="fade-up"
        >
          {t('cta.title', lang)}
        </h2>
        <p 
          class="text-xl text-silk/90 mb-12"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          {t('cta.description', lang)}
        </p>
        <div 
          class="flex flex-col sm:flex-row gap-4 justify-center"
          data-aos="fade-up"
          data-aos-delay="200"
        >
          <a 
            href={`/${lang}/contact`}
            class="group px-8 py-4 bg-fox text-white font-poppins text-lg rounded-lg hover:bg-arctic transition-all duration-300 shadow-md hover:shadow-xl relative overflow-hidden"
          >
            <span class="relative z-10">{t('cta.quote', lang)}</span>
            <div class="absolute inset-0 bg-gradient-to-r from-fox to-arctic opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .hover-lift {
    transition: transform 0.3s ease;
  }
  .hover-lift:hover {
    transform: translateY(-2px);
  }
</style>