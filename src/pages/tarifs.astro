---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Section from '../components/Section.astro';
import PricingCard from '../components/PricingCard.astro';
import CTA from '../components/CTA.astro';
import Logo from '../components/Logo.astro';
import '../styles/global.css';
---

<BaseLayout
  title="Tarifs Création Site Web - À partir de 2500€ | Foxyline.ai"
  description="Tarifs transparents pour votre site web professionnel. Forfaits Essentiel (2500€), Premium (3500€), Excellence (5000€). Livraison en 5-10 jours, sans frais cachés."
  ogType="website"
>
  <Navigation currentPage="tarifs" />

  <!-- Header -->
  <div class="pt-24 md:pt-28">
    <Section maxWidth="4xl">
      <div class="text-center space-y-6 py-12 md:py-16">
        <p
          class="text-xs uppercase tracking-widest"
          style="color: var(--color-copper); font-family: Outfit, sans-serif; font-weight: 500;"
        >
          TARIFS
        </p>
        <h1
          style="font-family: Outfit, sans-serif; font-size: clamp(36px, 6vw, 64px); line-height: 1.1; color: var(--color-forest); font-weight: 500; letter-spacing: -0.02em;"
        >
          Des tarifs transparents
        </h1>
        <p
          class="max-w-2xl mx-auto"
          style="font-family: Outfit, sans-serif; font-size: 20px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;"
        >
          Des tarifs simples et transparents. Tout ce dont vous avez besoin pour un site professionnel, sans aucun frais caché.
        </p>
      </div>
    </Section>
  </div>

  <!-- Pricing Grid -->
  <Section maxWidth="6xl">
    <div class="grid md:grid-cols-3 gap-8 items-start">
      <!-- Essentiel -->
      <PricingCard
        name="Essentiel"
        price="1 900 €"
        description="Pour lancer une présence en ligne claire et professionnelle."
        features={[
          "1 à 3 pages",
          "Design moderne",
          "Version mobile impeccable",
          "Hébergement premium inclus",
          "SSL & sécurité",
          "Livraison 5-7 jours"
        ]}
      />

      <!-- Premium (recommandé) -->
      <PricingCard
        name="Premium"
        price="3 500 €"
        description="Notre formule phare. Tout ce qu'il faut pour un site performant."
        highlighted={true}
        features={[
          "5 à 7 pages",
          "Design sur mesure premium",
          "Mobile parfait",
          "Performance A+",
          "SEO technique inclus",
          "Formulaire + tracking simple",
          "Livraison 5-10 jours",
          "Support 30 jours après livraison"
        ]}
      />

      <!-- Excellence -->
      <PricingCard
        name="Excellence"
        price="5 000+ €"
        description="Pour les projets ambitieux ou multi-sites."
        features={[
          "8 à 12 pages",
          "Design sur mesure avancé",
          "Animations élégantes",
          "Pages services détaillées",
          "Contenus optimisés",
          "Support 90 jours après livraison",
          "Livraison 10-15 jours"
        ]}
      />
    </div>
  </Section>

  <!-- Ce qui est inclus partout -->
  <Section maxWidth="6xl" background="var(--color-natural-beige)">
    <div class="space-y-12">
      <div class="text-center space-y-4">
        <p
          class="text-xs uppercase tracking-widest"
          style="color: var(--color-copper); font-family: Outfit, sans-serif; font-weight: 500;"
        >
          INCLUS DANS TOUS LES FORFAITS
        </p>
        <h2
          style="font-family: Outfit, sans-serif; font-size: clamp(32px, 5vw, 48px); line-height: 1.2; color: var(--color-forest); font-weight: 500;"
        >
          Ce que vous obtenez toujours
        </h2>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center space-y-3">
          <div class="w-16 h-16 mx-auto rounded-full flex items-center justify-center" style="background-color: var(--color-warm-white);">
            <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
              <path d="M14 2L2 8v11c0 6.627 4.59 12.887 11 14.5 6.41-1.613 11-7.873 11-14.5V8L14 2z" stroke="var(--color-copper)" stroke-width="2"/>
            </svg>
          </div>
          <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500;">
            Code 100% à vous
          </h4>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Pas de plateforme propriétaire : tout le code vous appartient
          </p>
        </div>

        <div class="text-center space-y-3">
          <div class="w-16 h-16 mx-auto rounded-full flex items-center justify-center" style="background-color: var(--color-warm-white);">
            <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
              <circle cx="14" cy="14" r="12" stroke="var(--color-copper)" stroke-width="2"/>
              <path d="M14 8v8l4 2" stroke="var(--color-copper)" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>
          <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500;">
            Livraison rapide
          </h4>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            5-15 jours selon le forfait, jamais plus
          </p>
        </div>

        <div class="text-center space-y-3">
          <div class="w-16 h-16 mx-auto rounded-full flex items-center justify-center" style="background-color: var(--color-warm-white);">
            <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
              <rect x="4" y="4" width="20" height="20" rx="3" stroke="var(--color-copper)" stroke-width="2"/>
              <path d="M10 14l3 3 5-5" stroke="var(--color-copper)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500;">
            Garantie qualité
          </h4>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Si vous n'êtes pas satisfait, on ajuste jusqu'à ce que ça le soit
          </p>
        </div>

        <div class="text-center space-y-3">
          <div class="w-16 h-16 mx-auto rounded-full flex items-center justify-center" style="background-color: var(--color-warm-white);">
            <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
              <path d="M14 26c6.627 0 12-5.373 12-12S20.627 2 14 2 2 7.373 2 14s5.373 12 12 12z" stroke="var(--color-copper)" stroke-width="2"/>
              <path d="M18 10l-6 6-3-3" stroke="var(--color-copper)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500;">
            Support réactif
          </h4>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Nous répondons rapidement à vos questions, avec un accompagnement humain
          </p>
        </div>
      </div>
    </div>
  </Section>

  <!-- Options à la carte -->
  <Section maxWidth="6xl">
    <div class="space-y-12">
      <div class="text-center space-y-4">
        <p
          class="text-xs uppercase tracking-widest"
          style="color: var(--color-copper); font-family: Outfit, sans-serif; font-weight: 500;"
        >
          OPTIONS À LA CARTE
        </p>
        <h2
          style="font-family: Outfit, sans-serif; font-size: clamp(32px, 5vw, 48px); line-height: 1.2; color: var(--color-forest); font-weight: 500;"
        >
          Personnalisez votre projet
        </h2>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="p-6 rounded-lg border-2" style="background-color: var(--color-warm-white); border-color: var(--color-natural-beige);">
          <div class="flex justify-between items-start mb-3">
            <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500;">
              Page supplémentaire
            </h4>
            <span style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-copper); font-weight: 500;">
              350 €
            </span>
          </div>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Ajoutez des pages au-delà du forfait initial
          </p>
        </div>

        <div class="p-6 rounded-lg border-2" style="background-color: var(--color-warm-white); border-color: var(--color-natural-beige);">
          <div class="flex justify-between items-start mb-3">
            <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500;">
              Branding complet
            </h4>
            <span style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-copper); font-weight: 500;">
              1 200 €
            </span>
          </div>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Logo, palette, typo, guide de style complet
          </p>
        </div>

        <div class="p-6 rounded-lg border-2" style="background-color: var(--color-warm-white); border-color: var(--color-natural-beige);">
          <div class="flex justify-between items-start mb-3">
            <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500;">
              Copywriting pro
            </h4>
            <span style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-copper); font-weight: 500;">
              750 €
            </span>
          </div>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Rédaction complète de vos textes par un pro
          </p>
        </div>

        <div class="p-6 rounded-lg border-2" style="background-color: var(--color-warm-white); border-color: var(--color-natural-beige);">
          <div class="flex justify-between items-start mb-3">
            <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500;">
              Photos pro
            </h4>
            <span style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-copper); font-weight: 500;">
              Sur devis
            </span>
          </div>
          <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Shooting photo professionnel sur site
          </p>
        </div>

        <div class="p-6 rounded-lg border-2" style="background-color: var(--color-warm-white); border-color: var(--color-natural-beige);">
          <div class="mb-4">
            <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500; margin-bottom: 6px;">
              Maintenance & support
            </h4>
            <p style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.5; color: var(--color-deep-sage); font-weight: 300;">
              Gardez un site impeccable toute l'année.
            </p>
          </div>

          <div class="space-y-3 pt-2 border-t" style="border-color: var(--color-natural-beige);">
            <div>
              <div class="flex items-baseline gap-2 mb-1">
                <span style="font-family: Outfit, sans-serif; font-size: 16px; color: var(--color-forest); font-weight: 500;">
                  Essentiel
                </span>
                <span style="font-family: Outfit, sans-serif; font-size: 16px; color: var(--color-copper); font-weight: 500;">
                  — 25 €/mois
                </span>
              </div>
              <p style="font-family: Outfit, sans-serif; font-size: 13px; line-height: 1.5; color: var(--color-deep-sage); font-weight: 300;">
                Modifications simples, support email, vérifications basiques.
              </p>
            </div>

            <div>
              <div class="flex items-baseline gap-2 mb-1">
                <span style="font-family: Outfit, sans-serif; font-size: 16px; color: var(--color-forest); font-weight: 500;">
                  Premium
                </span>
                <span style="font-family: Outfit, sans-serif; font-size: 16px; color: var(--color-copper); font-weight: 500;">
                  — 49 €/mois
                </span>
              </div>
              <p style="font-family: Outfit, sans-serif; font-size: 13px; line-height: 1.5; color: var(--color-deep-sage); font-weight: 300;">
                Modifications étendues, support prioritaire, évolutions légères.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- FAQ Pricing -->
  <Section maxWidth="4xl" background="var(--color-natural-beige)">
    <div class="space-y-8">
      <div class="text-center space-y-4">
        <h2
          style="font-family: Outfit, sans-serif; font-size: clamp(32px, 5vw, 48px); line-height: 1.2; color: var(--color-forest); font-weight: 500;"
        >
          Questions fréquentes
        </h2>
      </div>

      <div class="space-y-6">
        <div class="p-6 rounded-lg" style="background-color: var(--color-warm-white);">
          <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500; margin-bottom: 8px;">
            Y a-t-il des frais cachés?
          </h4>
          <p style="font-family: Outfit, sans-serif; font-size: 15px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Non, jamais. Le prix annoncé est le prix final. Tout est transparent.
          </p>
        </div>

        <div class="p-6 rounded-lg" style="background-color: var(--color-warm-white);">
          <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500; margin-bottom: 8px;">
            Dois-je payer un hébergement?
          </h4>
          <p style="font-family: Outfit, sans-serif; font-size: 15px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Non, tout est inclus la 1ère année. L'hébergement premium, la sécurité, les sauvegardes — vous n'avez rien à gérer.
          </p>
        </div>

        <div class="p-6 rounded-lg" style="background-color: var(--color-warm-white);">
          <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500; margin-bottom: 8px;">
            Comment se passe le paiement?
          </h4>
          <p style="font-family: Outfit, sans-serif; font-size: 15px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            50% à la commande, 50% à la livraison. Paiement par virement bancaire ou Stripe. Facturation française avec TVA si applicable.
          </p>
        </div>

        <div class="p-6 rounded-lg" style="background-color: var(--color-warm-white);">
          <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500; margin-bottom: 8px;">
            Que se passe-t-il après la livraison?
          </h4>
          <p style="font-family: Outfit, sans-serif; font-size: 15px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Vous avez 30 jours de support offert (90 jours pour Excellence). Après, vous pouvez souscrire à la maintenance mensuelle (dès 25 €/mois) ou payer à la carte pour les modifications.
          </p>
        </div>

        <div class="p-6 rounded-lg" style="background-color: var(--color-warm-white);">
          <h4 style="font-family: Outfit, sans-serif; font-size: 18px; color: var(--color-forest); font-weight: 500; margin-bottom: 8px;">
            Puis-je changer de forfait en cours de route?
          </h4>
          <p style="font-family: Outfit, sans-serif; font-size: 15px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;">
            Oui, vous pouvez upgrader à tout moment. Nous ajustons simplement la facture avec la différence.
          </p>
        </div>
      </div>
    </div>
  </Section>

  <!-- CTA -->
  <CTA
    title="Prêt à créer votre site premium?"
    description="Réservez un appel de 30 minutes pour discuter de votre projet et recevoir une proposition détaillée."
    buttonText="Réserver un appel"
    buttonLink="/contact"
    secondaryButtonText="Demander une proposition"
    secondaryButtonLink="/contact"
  />

  <!-- Footer -->
  <Section borderTop={true}>
    <div class="space-y-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-6">
        <Logo size={28} wordmarkSize={16} />
        <div class="flex gap-6">
          <a
            href="/brand"
            class="transition-colors"
            style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage); font-weight: 300; text-decoration: none;"
          >
            Brand Guidelines
          </a>
          <a
            href="/services"
            class="transition-colors"
            style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage); font-weight: 300; text-decoration: none;"
          >
            Services
          </a>
          <a
            href="/contact"
            class="transition-colors"
            style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage); font-weight: 300; text-decoration: none;"
          >
            Contact
          </a>
        </div>
      </div>
      <div class="text-center">
        <p
          style="font-family: Outfit, sans-serif; font-size: 14px; color: var(--color-deep-sage); font-weight: 300;"
        >
          © 2025 Foxyline.ai — Premium web design with purpose
        </p>
      </div>
    </div>
  </Section>
</BaseLayout>

<style>
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 100px;
  }

  *:focus-visible {
    outline: 2px solid var(--color-copper);
    outline-offset: 2px;
  }
</style>
