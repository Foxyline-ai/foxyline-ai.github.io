---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonLink: string;
  secondaryButtonText?: string;
  secondaryButtonLink?: string;
}

const { title, description, buttonText, buttonLink, secondaryButtonText, secondaryButtonLink } = Astro.props;
---

<section class="px-6 md:px-8 py-16 md:py-24">
  <div
    class="max-w-4xl mx-auto rounded-2xl p-8 md:p-12 lg:p-16 text-center"
    style="background-color: var(--color-forest);"
  >
    <div class="space-y-6 md:space-y-8">
      <h2
        style="font-family: Outfit, sans-serif; font-size: clamp(28px, 4vw, 48px); line-height: 1.2; color: rgb(232, 220, 196); font-weight: 500;"
      >
        {title}
      </h2>

      <p
        class="max-w-2xl mx-auto"
        style="font-family: Outfit, sans-serif; font-size: clamp(16px, 2.5vw, 18px); line-height: 1.6; color: rgb(212, 196, 172); font-weight: 300;"
      >
        {description}
      </p>

      <div class="pt-2 md:pt-4 flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={buttonLink}
          class="inline-block px-8 py-4 rounded-lg transition-all hover:shadow-lg hover:scale-105 focus:shadow-lg focus:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-[rgb(27,58,47)]"
          style="background-color: var(--color-copper); color: white; font-family: Outfit, sans-serif; font-size: 16px; font-weight: 400; text-decoration: none; --tw-ring-color: var(--color-copper);"
        >
          {buttonText}
        </a>
        {secondaryButtonText && secondaryButtonLink && (
          <a
            href={secondaryButtonLink}
            class="inline-block px-8 py-4 rounded-lg transition-all hover:shadow-md border-2"
            style="border-color: var(--color-warm-stone); color: var(--color-warm-white); font-family: Outfit, sans-serif; font-size: 16px; font-weight: 400; text-decoration: none;"
          >
            {secondaryButtonText}
          </a>
        )}
      </div>
    </div>
  </div>
</section>
