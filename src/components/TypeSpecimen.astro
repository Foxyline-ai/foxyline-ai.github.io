---
interface Props {
  level:
    | 'display'
    | 'h1'
    | 'h2'
    | 'h3'
    | 'body-large'
    | 'body-regular'
    | 'body-small'
    | 'caption';
  text: string;
  weight?: number;
}

const { level, text, weight } = Astro.props;

const styles = {
  display: {
    fontSize: '52px',
    fontWeight: weight || 500,
    lineHeight: '1.1',
    letterSpacing: '-0.01em',
  },
  h1: {
    fontSize: '40px',
    fontWeight: weight || 500,
    lineHeight: '1.2',
  },
  h2: {
    fontSize: '32px',
    fontWeight: weight || 400,
    lineHeight: '1.2',
  },
  h3: {
    fontSize: '24px',
    fontWeight: weight || 400,
    lineHeight: '1.3',
  },
  'body-large': {
    fontSize: '18px',
    fontWeight: weight || 300,
    lineHeight: '1.7',
  },
  'body-regular': {
    fontSize: '16px',
    fontWeight: weight || 300,
    lineHeight: '1.6',
  },
  'body-small': {
    fontSize: '14px',
    fontWeight: weight || 300,
    lineHeight: '1.5',
  },
  caption: {
    fontSize: '12px',
    fontWeight: weight || 400,
    lineHeight: '1.5',
    textTransform: 'uppercase',
    letterSpacing: '0.1em',
  },
}[level];

const styleString = Object.entries(styles)
  .map(([key, value]) => {
    const cssKey = key.replace(/([A-Z])/g, '-$1').toLowerCase();
    return `${cssKey}: ${value}`;
  })
  .join('; ');
---

<div
  style={`font-family: Outfit, sans-serif; color: var(--color-forest); ${styleString};`}
>
  {text}
</div>
