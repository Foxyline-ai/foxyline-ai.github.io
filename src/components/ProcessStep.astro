---
interface Props {
  number: string;
  title: string;
  description: string;
  details?: string[];
  icon?: string;
}

const {
  number,
  title,
  description,
  details = [],
  icon
} = Astro.props;
---

<div class="relative">
  <div class="flex gap-6 md:gap-8">
    <!-- Number/Icon -->
    <div class="flex-shrink-0">
      <div
        class="w-16 h-16 md:w-20 md:h-20 rounded-full flex items-center justify-center"
        style="background-color: var(--color-natural-beige);"
      >
        <span
          style="font-family: Outfit, sans-serif; font-size: 24px; md:font-size: 28px; color: var(--color-forest); font-weight: 500;"
        >
          {number}
        </span>
      </div>
    </div>

    <!-- Content -->
    <div class="flex-1 space-y-3 pt-2">
      <h3
        style="font-family: Outfit, sans-serif; font-size: 24px; line-height: 1.2; color: var(--color-forest); font-weight: 500;"
      >
        {title}
      </h3>
      <p
        style="font-family: Outfit, sans-serif; font-size: 16px; line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;"
      >
        {description}
      </p>

      {details.length > 0 && (
        <ul class="space-y-2 pt-2">
          {details.map(detail => (
            <li class="flex items-start gap-2">
              <svg
                width="16"
                height="16"
                viewBox="0 0 16 16"
                fill="none"
                class="flex-shrink-0 mt-1"
              >
                <circle cx="8" cy="8" r="2" fill="var(--color-copper)" />
              </svg>
              <span
                style="font-family: Outfit, sans-serif; font-size: 14px; line-height: 1.5; color: var(--color-deep-sage); font-weight: 300;"
              >
                {detail}
              </span>
            </li>
          ))}
        </ul>
      )}
    </div>
  </div>
</div>
