---
import { t, type Language } from '../i18n/config';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class="bg-charcoal text-white py-16">
  <div class="max-w-7xl mx-auto px-4 grid grid-cols-1 md:grid-cols-4 gap-12">
    <div>
      <h3 class="font-poppins text-2xl mb-4 gradient-text">Foxyline</h3>
      <p class="text-silk/80">{t('footer.description', lang)}</p>
    </div>
    
    <div>
      <h4 class="font-poppins text-lg mb-4 text-fox">{t('footer.services', lang)}</h4>
      <ul class="space-y-2">
        <li><a href={`/${lang}/services#vitrine`} class="text-silk/80 hover:text-white transition-colors hover-lift inline-block">{t('nav.services', lang)}</a></li>
        <li><a href={`/${lang}/services#landing`} class="text-silk/80 hover:text-white transition-colors hover-lift inline-block">Landing pages</a></li>
        <li><a href={`/${lang}/services#refonte`} class="text-silk/80 hover:text-white transition-colors hover-lift inline-block">Refonte de site</a></li>
        <li><a href={`/${lang}/services#seo`} class="text-silk/80 hover:text-white transition-colors hover-lift inline-block">SEO & Visibilité</a></li>
      </ul>
    </div>
    
    <div>
      <h4 class="font-poppins text-lg mb-4 text-fox">{t('footer.resources', lang)}</h4>
      <ul class="space-y-2">
        <li><a href={`/${lang}/portfolio`} class="text-silk/80 hover:text-white transition-colors hover-lift inline-block">{t('nav.portfolio', lang)}</a></li>
        <li><a href={`/${lang}/blog`} class="text-silk/80 hover:text-white transition-colors hover-lift inline-block">{t('nav.blog', lang)}</a></li>
        <li><a href={`/${lang}/a-propos`} class="text-silk/80 hover:text-white transition-colors hover-lift inline-block">{t('nav.about', lang)}</a></li>
      </ul>
    </div>
    
    <div>
      <h4 class="font-poppins text-lg mb-4 text-fox">{t('footer.contact', lang)}</h4>
      <ul class="space-y-2">
        <li><a href="mailto:hello@foxyline.design" class="text-silk/80 hover:text-white transition-colors hover-lift inline-block">hello@foxyline.design</a></li>
        <li class="text-silk/80">Paris, France</li>
      </ul>
    </div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 mt-12 pt-8 border-t border-silk/10">
    <p class="text-silk/60 text-sm">© {currentYear} Foxyline. {t('footer.rights', lang)}</p>
  </div>
</footer>