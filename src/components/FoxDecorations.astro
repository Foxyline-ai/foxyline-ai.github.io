---
interface Props {
  variant?: 'light' | 'dark';
}

const { variant = 'light' } = Astro.props;

const color = variant === 'light' ? '#F7F8F9' : '#1A1F2C';
---

<div class="absolute inset-0 pointer-events-none overflow-hidden">
  <!-- Fox Tail -->
  <svg 
    class="absolute -right-16 top-1/4 w-96 h-96 opacity-[0.08]"
    viewBox="0 0 200 200" 
    fill="none" 
    xmlns="http://www.w3.org/2000/svg"
  >
    <path 
      d="M20,180 C40,160 60,140 80,120 C100,100 120,80 140,60 C160,40 180,20 180,20" 
      stroke={color} 
      stroke-width="4" 
      stroke-linecap="round"
      class="animate-tail"
    />
    <path 
      d="M20,180 C40,160 60,140 80,120 C100,100 120,80 140,60 C160,40 180,20 180,20" 
      stroke={color} 
      stroke-width="2" 
      stroke-linecap="round"
      class="animate-tail-delayed"
    />
    <path 
      d="M20,180 C40,160 60,140 80,120 C100,100 120,80 140,60 C160,40 180,20 180,20" 
      stroke={color} 
      stroke-width="1" 
      stroke-linecap="round"
      class="animate-tail-delayed-2"
    />
  </svg>

  <!-- Fox Silhouette -->
  <svg 
    class="absolute left-20 top-20 w-64 h-64 opacity-[0.06]"
    viewBox="0 0 100 100" 
    fill="none" 
    xmlns="http://www.w3.org/2000/svg"
  >
    <!-- Fox Head -->
    <path 
      d="M50,20 C60,20 70,25 75,35 C80,45 80,55 75,65 C70,75 60,80 50,80 C40,80 30,75 25,65 C20,55 20,45 25,35 C30,25 40,20 50,20 Z" 
      stroke={color} 
      stroke-width="2" 
      stroke-linecap="round"
    />
    <!-- Fox Ears -->
    <path 
      d="M40,30 C35,25 30,20 25,15 M60,30 C65,25 70,20 75,15" 
      stroke={color} 
      stroke-width="2" 
      stroke-linecap="round"
    />
    <!-- Fox Snout -->
    <path 
      d="M45,50 C47,52 50,53 55,52" 
      stroke={color} 
      stroke-width="1" 
      stroke-linecap="round"
    />
    <!-- Fox Eyes -->
    <path 
      d="M40,45 C42,45 43,45 45,45 M55,45 C57,45 58,45 60,45" 
      stroke={color} 
      stroke-width="1" 
      stroke-linecap="round"
    />
  </svg>

  <!-- Fox Body -->
  <svg 
    class="absolute bottom-20 right-20 w-64 h-64 opacity-[0.06]"
    viewBox="0 0 100 100" 
    fill="none" 
    xmlns="http://www.w3.org/2000/svg"
  >
    <path 
      d="M30,70 C40,60 50,50 60,40 C70,30 80,20 90,10" 
      stroke={color} 
      stroke-width="2" 
      stroke-linecap="round"
      class="animate-ears"
    />
    <path 
      d="M70,70 C60,60 50,50 40,40 C30,30 20,20 10,10" 
      stroke={color} 
      stroke-width="2" 
      stroke-linecap="round"
      class="animate-ears"
    />
    <!-- Fox Body -->
    <path 
      d="M50,50 C60,60 70,70 80,80" 
      stroke={color} 
      stroke-width="2" 
      stroke-linecap="round"
      class="animate-body"
    />
  </svg>

  <!-- Fox Paw Prints -->
  <svg 
    class="absolute left-1/2 top-1/3 w-96 h-96 -translate-x-1/2 opacity-[0.04]"
    viewBox="0 0 100 100" 
    fill="none" 
    xmlns="http://www.w3.org/2000/svg"
  >
    <path 
      d="M30,50 C35,45 40,40 45,35 C50,30 55,35 60,40 C65,45 70,50 70,50" 
      stroke={color} 
      stroke-width="1" 
      stroke-linecap="round"
      class="animate-paw"
    />
    <path 
      d="M40,60 C45,55 50,50 55,45 C60,40 65,45 70,50" 
      stroke={color} 
      stroke-width="1" 
      stroke-linecap="round"
      class="animate-paw-delayed"
    />
  </svg>
</div>

<style>
  @keyframes tail {
    0% {
      transform: translateX(0) rotate(0deg);
    }
    50% {
      transform: translateX(5px) rotate(2deg);
    }
    100% {
      transform: translateX(0) rotate(0deg);
    }
  }

  @keyframes ears {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
    100% {
      transform: scale(1);
    }
  }

  @keyframes body {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(2px);
    }
    100% {
      transform: translateY(0);
    }
  }

  @keyframes paw {
    0% {
      opacity: 0.04;
    }
    50% {
      opacity: 0.06;
    }
    100% {
      opacity: 0.04;
    }
  }

  .animate-tail {
    animation: tail 8s ease-in-out infinite;
  }

  .animate-tail-delayed {
    animation: tail 8s ease-in-out infinite 0.5s;
  }

  .animate-tail-delayed-2 {
    animation: tail 8s ease-in-out infinite 1s;
  }

  .animate-ears {
    animation: ears 6s ease-in-out infinite;
  }

  .animate-body {
    animation: body 4s ease-in-out infinite;
  }

  .animate-paw {
    animation: paw 4s ease-in-out infinite;
  }

  .animate-paw-delayed {
    animation: paw 4s ease-in-out infinite 0.5s;
  }
</style>