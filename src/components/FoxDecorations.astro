---
interface Props {
  variant?: 'light' | 'dark';
}

const { variant = 'light' } = Astro.props;

const color = variant === 'light' ? '#F7F8F9' : '#1A1F2C';
---

<div class="absolute inset-0 pointer-events-none overflow-hidden">
  <!-- Elegant Fox Tail -->
  <svg 
    class="absolute -right-24 top-1/4 w-48 h-48 transform rotate-45 opacity-[0.03]"
    viewBox="0 0 100 100" 
    fill="none" 
    xmlns="http://www.w3.org/2000/svg"
  >
    <path 
      d="M10,90 Q30,80 50,50 T90,10" 
      stroke={color} 
      stroke-width="6" 
      stroke-linecap="round"
      class="animate-dash"
    />
  </svg>

  <!-- Geometric Fox Pattern -->
  <svg 
    class="absolute left-10 top-20 w-32 h-32 opacity-[0.03]"
    viewBox="0 0 100 100" 
    fill="none" 
    xmlns="http://www.w3.org/2000/svg"
  >
    <path 
      d="M50,10 L90,90 L10,90 Z" 
      stroke={color} 
      stroke-width="6" 
      stroke-linejoin="round"
      fill="none"
    />
  </svg>

  <!-- Abstract Geometric Elements -->
  <div class="absolute bottom-20 right-20 opacity-[0.03]">
    <div class="w-48 h-48 border-2 rounded-full border-current transform rotate-45"></div>
    <div class="w-32 h-32 border-2 rounded-full border-current absolute top-8 left-8"></div>
    <div class="w-16 h-16 border-2 rounded-full border-current absolute top-16 left-16"></div>
  </div>

  <!-- Elegant Lines -->
  <svg 
    class="absolute left-1/2 top-1/3 w-64 h-64 -translate-x-1/2 opacity-[0.02]"
    viewBox="0 0 100 100" 
    fill="none" 
    xmlns="http://www.w3.org/2000/svg"
  >
    <circle cx="50" cy="50" r="45" stroke={color} stroke-width="2" stroke-dasharray="8 8" />
    <circle cx="50" cy="50" r="35" stroke={color} stroke-width="2" stroke-dasharray="6 6" />
    <circle cx="50" cy="50" r="25" stroke={color} stroke-width="2" stroke-dasharray="4 4" />
  </svg>
</div>

<style>
  @keyframes dash {
    to {
      stroke-dashoffset: 0;
    }
  }

  .animate-dash {
    stroke-dasharray: 300;
    stroke-dashoffset: 300;
    animation: dash 5s ease-out forwards infinite;
  }
</style>