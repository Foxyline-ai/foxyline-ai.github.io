---
interface Props {
  title: string;
  subtitle?: string;
  description: string;
  ctaText?: string;
  ctaLink?: string;
}

const { title, subtitle, description, ctaText, ctaLink } = Astro.props;
---

<section class="relative min-h-[85vh] flex items-center justify-center px-6 md:px-8 py-16 md:py-24 overflow-hidden">
  <!-- Triangle pattern background -->
  <div class="absolute inset-0 pointer-events-none" style="opacity: 0.03;">
    <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="fox-triangles" x="0" y="0" width="120" height="120" patternUnits="userSpaceOnUse">
          <!-- Small triangles pointing up -->
          <path d="M 20 40 L 30 20 L 40 40 Z" fill="#B87A5C" />
          <path d="M 60 80 L 70 60 L 80 80 Z" fill="#B87A5C" />
          <path d="M 100 20 L 110 0 L 120 20 Z" fill="#B87A5C" />

          <!-- Medium triangles pointing down -->
          <path d="M 0 60 L 15 80 L 30 60 Z" fill="#D4A88C" />
          <path d="M 50 100 L 65 120 L 80 100 Z" fill="#D4A88C" />

          <!-- Small accents -->
          <path d="M 90 50 L 95 40 L 100 50 Z" fill="#B87A5C" />
          <path d="M 10 100 L 15 90 L 20 100 Z" fill="#E8C4AC" />
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#fox-triangles)" />
    </svg>
  </div>

  <div class="max-w-4xl mx-auto text-center space-y-6 md:space-y-8 relative z-10">
    {subtitle && (
      <p
        class="text-xs uppercase tracking-widest animate-fade-in"
        style="color: var(--color-copper); font-family: Outfit, sans-serif; font-weight: 500;"
      >
        {subtitle}
      </p>
    )}

    <h1
      class="animate-fade-in-up"
      style="font-family: Outfit, sans-serif; font-size: clamp(36px, 6vw, 72px); line-height: 1.1; color: var(--color-forest); font-weight: 500; letter-spacing: -0.02em;"
    >
      {title}
    </h1>

    <p
      class="max-w-2xl mx-auto animate-fade-in-up"
      style="font-family: Outfit, sans-serif; font-size: clamp(16px, 3vw, 20px); line-height: 1.6; color: var(--color-deep-sage); font-weight: 300;"
    >
      {description}
    </p>

    {ctaText && ctaLink && (
      <div class="pt-4 animate-fade-in-up">
        <a
          href={ctaLink}
          class="inline-block px-8 py-4 rounded-lg transition-all hover:shadow-lg hover:scale-105 focus:shadow-lg focus:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2"
          style="background-color: var(--color-copper); color: white; font-family: Outfit, sans-serif; font-size: 16px; font-weight: 400; text-decoration: none; --tw-ring-color: var(--color-copper);"
        >
          {ctaText}
        </a>
      </div>
    )}
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
    animation-fill-mode: both;
  }

  .animate-fade-in-up:nth-child(2) {
    animation-delay: 0.1s;
  }

  .animate-fade-in-up:nth-child(3) {
    animation-delay: 0.2s;
  }

  .animate-fade-in-up:nth-child(4) {
    animation-delay: 0.3s;
  }
</style>
